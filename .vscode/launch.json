{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch current file w/ ts-node",
      "protocol": "inspector",
      "args": [
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register", // so node can resolve absolute paths set in tsconfig
        "-r",
        "ts-node/register"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/src/"
    },
  ],
  "compounds": [
    {
      "name": "Full-stack",
      "configurations": [
        "Launch current file w/ ts-node",
        "Chrome"
      ]
    }
  ]
}