{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch current file w/ ts-node",
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "args": [
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register", // so node can resolve absolute paths set in tsconfig
        "-r",
        "ts-node/register"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      // "showAsyncStacks": true,
      "smartStep": true,
      "skipFiles": [
        "${workspaceFolder}/node_modules"
      ]
    }, // end Launch current file w/ ts-node
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "port": 9222,
      "url": "http://localhost:3000",
      "sourceMaps": true,
      "trace": true,
      "webRoot": "${workspaceRoot}",
      "userDataDir": "${workspaceRoot}/out/chrome", // "userDataDir": "${workspaceRoot}/.vscode/chrome"
      "skipFiles": [
        "${workspaceFolder}/node_modules"
      ]
    }, // end Launch Chrome 
    {
      "name": "Attach Chrome",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:3000",
      "sourceMaps": true,
      "trace": true,
      "webRoot": "${workspaceRoot}",
      "skipFiles": [
        "${workspaceFolder}/node_modules"
      ]
    }, // end Launch Chrome 
  ],
  "compounds": [
    {
      "name": "Full-stack",
      "configurations": [
        "Launch current file w/ ts-node",
        "Launch Chrome"
      ]
    } // end Full-stack
  ]
}