{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch current file w/ ts-node",
      "protocol": "inspector",
      "args": [
        "${relativeFile}"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeArgs": [
        "-r",
        "tsconfig-paths/register", // so node can resolve absolute paths set in tsconfig
        "-r",
        "ts-node/register"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      // "showAsyncStacks": true,
      "smartStep": true
    }, // end Launch current file w/ ts-node
    {
      "type": "chrome",
      "request": "launch",
      "name": "Chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/src/"
    }, // end Chrome
    {
      "name": "Attach to url with files served from ./src/server/",
      "type": "chrome",
      "request": "attach",
      "port": 9222,
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/src/server"
    }
  ],
  "compounds": [
    {
      "name": "Full-stack",
      "configurations": [
        "Launch current file w/ ts-node",
        "Chrome"
      ]
    } // end Full-stack
  ],
  "skipFiles": [
    "${workspaceFolder}/node_modules/**/*.js"
  ]
}