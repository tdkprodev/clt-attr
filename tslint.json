{
  // "extends": [], // uncomment to relieve stress...
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "defaultSeverity": "warning",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "jsx-boolean-value": false, // THIS RULE ROCKS
    "no-console": false,
    // "member-ordering": false,
    // "member-access": false,
    // "object-literal-sort-keys": false,
    // "ordered-imports": false,
    // "interface-name": false
  },
  "jsRules": {},
  "rulesDirectory": []
}